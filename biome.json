{
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120,
    "lineEnding": "lf"
  },
  "linter": {
    "rules": {
      "style": {
        "noNonNullAssertion": "off"
      },
      "complexity": {
        "noForEach": "off",
        "noCommaOperator": "off"
      },
      "suspicious": {
        "noAssignInExpressions": "off",
        "noExplicitAny": "off",
        "useIterableCallbackReturn": "off",
        "noConfusingVoidType": "off"
      },
      "correctness": {
        "noVoidTypeReturn": "off"
      }
    }
  }
}
