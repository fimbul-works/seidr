{
  "name": "@fimbul-works/seidr",
  "description": "Reactive primitives and DOM utilities for building UIs",
  "version": "1.0.0",
  "type": "module",
  "private": false,
  "license": "MIT",
  "author": "FimbulWorks <contact@fimbul.works>",
  "homepage": "https://github.com/fimbul-works/seidr#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fimbul-works/seidr.git"
  },
  "bugs": {
    "url": "https://github.com/fimbul-works/seidr/issues"
  },
  "keywords": [
    "frontend",
    "dom",
    "reactive",
    "reactive-programming",
    "functional",
    "typescript"
  ],
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "README.md",
    "API.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "clean:dist": "rm -rf dist",
    "clean:examples": "rm -rf examples/dist",
    "clean": "pnpm clean:dist && pnpm clean:examples",
    "build": "pnpm clean:dist && pnpm build:esm && pnpm build:cjs && pnpm build:bundles",
    "build:esm": "NODE_OPTIONS=\"--max-old-space-size=4096\" tsc -p tsconfig.json",
    "build:cjs": "NODE_OPTIONS=\"--max-old-space-size=4096\" tsc -p tsconfig.cjs.json && echo '{\"type\":\"commonjs\"}' > dist/cjs/package.json",
    "build:bundles": "./build-bundles.sh",
    "build:examples": "./build-examples.sh",
    "dev:examples": "vite --config vite.examples.config.ts",
    "format": "npx biome format --write src *.json",
    "test": "vitest",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@rollup/plugin-terser": "^0.4.4",
    "@testing-library/dom": "^10.4.1",
    "@types/node": "^25.0.3",
    "jsdom": "^27.3.0",
    "rollup": "^4.54.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  }
}
