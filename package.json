{
  "name": "@fimbul-works/seidr",
  "description": "Zero-dependency reactive framework with fine-grained reactivity, SSR support, and tiny footprint",
  "version": "1.0.0",
  "type": "module",
  "private": false,
  "license": "MIT",
  "author": "FimbulWorks <contact@fimbul.works>",
  "homepage": "https://github.com/fimbul-works/seidr#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fimbul-works/seidr.git"
  },
  "bugs": {
    "url": "https://github.com/fimbul-works/seidr/issues"
  },
  "keywords": [
    "frontend",
    "dom",
    "reactive",
    "reactive-programming",
    "observables",
    "signals",
    "fine-grained-reactivity",
    "functional",
    "typescript",
    "ui",
    "framework",
    "components",
    "ssr",
    "server-side-rendering",
    "lightweight",
    "zero-dependencies",
    "virtual-dom-free"
  ],
  "main": "./dist/seidr.node.cjs",
  "module": "./dist/seidr.node.js",
  "browser": "./dist/seidr.js",
  "types": "./dist/seidr.node.d.ts",
  "exports": {
    ".": {
      "browser": {
        "types": "./dist/seidr.d.ts",
        "import": "./dist/seidr.js",
        "require": "./dist/seidr.cjs"
      },
      "node": {
        "types": "./dist/seidr.node.d.ts",
        "import": "./dist/seidr.node.js",
        "require": "./dist/seidr.node.cjs"
      },
      "default": "./dist/seidr.js"
    }
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "dist/**/*.map",
    "README.md",
    "API.md",
    "SSR.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "clean:dist": "rm -rf dist",
    "clean:examples": "rm -rf examples/dist",
    "clean": "pnpm clean:dist && pnpm clean:examples",
    "build": "pnpm build:javascript && pnpm build:types",
    "build:javascript": "NODE_OPTIONS=\"--max-old-space-size=4096\" rollup -c",
    "build:types": "pnpm build:types:node && pnpm build:types:browser",
    "build:types:browser": "dts-bundle-generator -o dist/seidr.d.ts src/index.browser.ts",
    "build:types:node": "dts-bundle-generator -o dist/seidr.node.d.ts src/index.node.ts",
    "build:examples": "pnpm clean:examples && ./build-examples.sh",
    "build:all": "pnpm build && pnpm build:examples && pnpm sizes",
    "sizes": "./calculate-bundle-sizes.sh",
    "dev:examples": "vite --config vite.examples.config.ts",
    "dev:ssr": "tsx watch examples/ssr/server.ts",
    "format": "npx biome format --write src examples *.json",
    "test": "vitest run",
    "prepublishOnly": "pnpm clean:dist && pnpm build"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-replace": "^6.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "@testing-library/dom": "^10.4.1",
    "@types/express": "^5.0.6",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^25.0.9",
    "dts-bundle-generator": "^9.5.1",
    "express": "^5.2.1",
    "front-matter": "^4.0.2",
    "jsdom": "^27.4.0",
    "marked": "^17.0.1",
    "rollup": "^4.55.1",
    "sirv": "^3.0.2",
    "tslib": "^2.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  }
}
