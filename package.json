{
  "name": "@fimbul-works/seidr",
  "description": "Reactive primitives and DOM utilities for building UIs",
  "version": "1.0.0",
  "type": "module",
  "private": false,
  "license": "MIT",
  "author": "FimbulWorks <contact@fimbul.works>",
  "homepage": "https://github.com/fimbul-works/seidr#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fimbul-works/seidr.git"
  },
  "bugs": {
    "url": "https://github.com/fimbul-works/seidr/issues"
  },
  "keywords": [
    "frontend",
    "dom",
    "reactive",
    "reactive-programming",
    "functional",
    "typescript"
  ],
  "main": "./dist/seidr.node.cjs",
  "module": "./dist/seidr.node.js",
  "browser": "./dist/seidr.js",
  "types": "./dist/seidr.node.d.ts",
  "exports": {
    ".": {
      "browser": {
        "types": "./dist/seidr.d.ts",
        "import": "./dist/seidr.js",
        "require": "./dist/seidr.cjs"
      },
      "node": {
        "types": "./dist/seidr.node.d.ts",
        "import": "./dist/seidr.node.js",
        "require": "./dist/seidr.node.cjs"
      },
      "default": "./dist/seidr.js"
    }
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "dist/**/*.map",
    "README.md",
    "API.md",
    "SSR.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "clean:dist": "rm -rf dist",
    "clean:examples": "rm -rf examples/dist",
    "clean": "pnpm clean:dist && pnpm clean:examples",
    "build": "pnpm clean:dist && pnpm build:javascript && pnpm build:types && pnpm copy:types && pnpm bundlesizes",
    "build:javascript": "NODE_OPTIONS=\"--max-old-space-size=4096\" rollup -c",
    "build:types": "pnpm build:types:browser:full && pnpm build:types:browser:core && pnpm build:types:node",
    "build:types:browser:full": "dts-bundle-generator -o dist/seidr.d.ts src/index.browser.ts",
    "build:types:browser:core": "dts-bundle-generator -o dist/seidr.core.d.ts src/index.browser.core.ts",
    "build:types:node": "dts-bundle-generator -o dist/seidr.node.d.ts src/index.node.ts",
    "copy:types": "cp dist/seidr.d.ts dist/seidr.min.d.ts && cp dist/seidr.core.d.ts dist/seidr.core.min.d.ts",
    "build:examples": "pnpm clean:examples && ./build-examples.sh",
    "build:all": "pnpm build && pnpm build:examples && pnpm bundlesizes",
    "bundlesizes": "./calculate-bundle-sizes.sh",
    "dev:examples": "vite --config vite.examples.config.ts",
    "dev": "tsx watch examples/ssr/server.ts",
    "format": "npx biome format --write src *.json",
    "test": "vitest",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-replace": "^6.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "@testing-library/dom": "^10.4.1",
    "@types/express": "^5.0.6",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^25.0.3",
    "dts-bundle-generator": "^9.5.1",
    "express": "^5.2.1",
    "jsdom": "^27.3.0",
    "puppeteer": "^24.34.0",
    "rollup": "^4.54.0",
    "sirv": "^3.0.2",
    "tslib": "^2.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  }
}
